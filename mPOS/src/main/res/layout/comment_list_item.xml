<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:dividerVertical"
    android:dividerPadding="8dp"
    android:gravity="center_vertical"
    android:minHeight="?android:listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="@dimen/default_margin" >

    <TextView
        android:id="@+id/tvCommentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chkCommentName"
        android:layout_below="@+id/chkCommentName"
        android:layout_marginLeft="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCommentQty"
        style="@style/TextQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCommentPlus"
        android:layout_alignBottom="@+id/btnCommentPlus"
        android:layout_toLeftOf="@+id/btnCommentPlus"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnCommentPlus"
        style="@style/GrayButtonRightCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minWidth="48dp"
        android:text="@string/plus" />

    <Button
        android:id="@+id/btnCommentMinus"
        style="@style/GrayButtonLeftCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvCommentQty"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minWidth="48dip"
        android:text="@string/minus" />

    <CheckedTextView
        android:id="@+id/chkCommentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCommentMinus"
        android:layout_alignBottom="@+id/btnCommentMinus"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btnCommentMinus"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical" />

</RelativeLayout>