<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/txtDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignRight="@+id/btnDel"
        android:clickable="false"
        android:ems="6"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|right"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn7"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDisplay"
        android:layout_margin="2dp"
        android:onClick="onClick"
        android:text="7"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn8"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDisplay"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn7"
        android:onClick="onClick"
        android:text="8"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn9"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDisplay"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn8"
        android:onClick="onClick"
        android:text="9"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btnDel"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDisplay"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClick"
        android:text="&lt;&lt;"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn4"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn7"
        android:layout_margin="2dp"
        android:onClick="onClick"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn5"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn4"
        android:onClick="onClick"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn6"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn9"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn5"
        android:onClick="onClick"
        android:text="6"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btnClear"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDel"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn6"
        android:onClick="onClick"
        android:text="C"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn1"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn4"
        android:layout_margin="2dp"
        android:onClick="onClick"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn2"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn1"
        android:onClick="onClick"
        android:text="2"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn3"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn6"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn2"
        android:onClick="onClick"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btnDot"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnClear"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn3"
        android:onClick="onClick"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btn0"
        style="@style/KeyPadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn2"
        android:layout_below="@+id/btn1"
        android:layout_margin="2dp"
        android:onClick="onClick"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/btnEnter"
        style="@style/GreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnDot"
        android:layout_below="@+id/btn3"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn0"
        android:minHeight="72dp"
        android:onClick="onClick"
        android:text="@string/enter"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/large_text_size" />

</RelativeLayout>